<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--1.service和dao对象创建-->
    <bean id="userService" class="com.hlp.spring5_demon1.service.UserService">
        <!--注入userDao对象
            name属性值：类里面属性名称
            ref属性：创建userDao对象bean标签id值
        -->
        <property name="userDao" ref="userDaoImpl"></property>    <!--注入的是对象，里面要换成ref标签-->
    </bean>
    <bean id="userDaoImpl" class="com.hlp.spring5_demon1.dao.UserDaoImpl"></bean>  <!--接口需要配置它的实现类-->


</beans>